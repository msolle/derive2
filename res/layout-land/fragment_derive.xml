<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#444444"> 

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#b5b5b5"
        android:text="@string/derive_title_label"
        style="?android:listSeparatorTextViewStyle"
        />
    <EditText android:id="@+id/derive_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  
        android:textColor="#b5b5b5"      
        android:hint="@string/derive_title_hint"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#b5b5b5"
        android:text="@string/derive_details_label"
        style="?android:listSeparatorTextViewStyle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
    	android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <Button
            android:id="@+id/derive_date"          
            android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:layout_weight="66"/>

        <CheckBox
            android:textColor="#b5b5b5"
            android:id="@+id/derive_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:text="@string/derive_done_label" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#b5b5b5"
        android:text="@string/derive_instruction_label"
        style="?android:listSeparatorTextViewStyle"
        /> 
    <TextView
        android:id="@+id/statement_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#b5b5b5"
		android:layout_marginLeft="24dp"
		android:layout_marginRight="24dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#b5b5b5"
        android:text="@string/derive_notes_label"
        style="?android:listSeparatorTextViewStyle"
        />
    <EditText android:id="@+id/derive_notes"
        android:textColor="#b5b5b5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:hint="@string/derive_notes_hint"
        />

</LinearLayout>
